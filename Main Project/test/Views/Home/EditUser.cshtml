@model test.ViewModel.AddUserViewModel;
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="main">
        <div class="offcanvas offcanvas-start d-lg-block show" tabindex="-1" id="sidebar" data-bs-scroll="true"
            data-bs-backdrop="false" aria-controls="offcanvasScrolling">

            <div class="offcanvas-body">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                    <div class="title fs-5 fw-bold">PIZZASHOP</div>
                    <button type="button" class="btn-close d-md-none" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="d-flex flex-column mt-3 ps-3">
                    <a href="" class="dashboard_btn sidebar_btn d-flex align-items-center">
                        <img class="" src="" alt="">
                        <div>Dashboard</div>
                    </a>
                    <a asp-controller="Home" asp-action="UserList" class="users_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Users</div>
                    </a>
                    <a href="role.html" class="role_permission_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Role and Permission</div>
                    </a>
                    <a href="menu.html" class="menu_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Menu</div>
                    </a>
                    <a href="" class="table_section_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Table and Section</div>
                    </a>
                    <a href="" class="taxes_fees_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Taxes And Fees</div>
                    </a>
                    <a href="" class="orders_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Orders</div>
                    </a>
                    <a href="" class="customers_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Customers</div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="user_body">
        <div class="status d-flex align-items-center justify-content-between h-10">
            <a class="btn btn-primary bg-white d-lg-block toggle_btn" data-bs-toggle="offcanvas" href="#sidebar" role="button"
                aria-controls="sidebar">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                    <div class="title fs-5 fw-bold">PIZZASHOP</div>
                </div>
            </a>
            <div>
                <img class=" dropdown-toggle me-2" data-bs-toggle="dropdown" aria-expanded="false" width="35"
                    src="~/images/Default_pfp.svg.png" alt="">
                <ul class="dropdown-menu dropdown-menu-end ">
                    <li><a class="dropdown-item d-flex align-items-center" href="#">
                            <img class="me-2" width="25" src="~/images/Default_pfp.svg.png" alt="">
                            Admin@123</p>
                        </a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="Profile">
                            <img class="me-2" width="25" src="~/images/Default_pfp.svg.png" alt="">
                            My profile
                        </a></li>
                    <li><a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="ProfileChangePassword">
                            Change Password
                        </a></li>
                    <li><a class="dropdown-item d-flex align-items-center"  asp-controller="Home" asp-action="Logout"
                    data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <div class="d-flex">
                                Logout
                            </div>
                        </a></li>
                </ul>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <form>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="d-flex justify-content-center"><img class="alert_img w-50"
                                    src="~/images/toppng.com-warning-icon-2400x2400.png" alt=""></div>
                            <div class="d-flex justify-content-center">Are you sure you want to logout?
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <div class=" mt-3">
                                <button type="submit" asp-controller="Home" asp-action="Logout" class="btn btn-primary">Yes</button>
                                <button type="submit" class="btn border-primary ms-1">No</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="add_user_heading d-flex justify-content-between">
            <div class="fw-bold fs-2">Edit User</div>
            <div class="d-flex">
                <img src="" alt="">
                <a href="userList.html" class="btn btn-primary ms-3">&lt; Back</a>
            </div>
        </div>

        <form method="post" class="add_user_form">
            <div class="row mx-0">
                <div class="col-lg-6 col-md-6 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" asp-for="Firstname" value="@Model.Firstname" id="floatingInput"
                            placeholder="name@example.com">
                        <label for="floatingInput">First Name</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" asp-for="Lastname" value="@Model.Lastname" id="exampleInput"
                            aria-describedby="emailHelp" placeholder="Last Name">
                        <label for="floatingInput">Last Name</label>
                    </div>
                </div>
            </div>

            <div class="row mx-0">
                <div class="col-lg-6 col-md-6 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" asp-for="Username" value="@Model.Username" id="floatingInput"
                            placeholder="name@example.com">
                        <label for="floatingInput">User Name</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 mt-3">

                    <div class="form-floating">
                        <select class="form-select add_user_input" asp-for="RoleId"  aria-label="Default select example">
                            <option selected>@Model.RoleId</option>
                            <option value="1">Admin</option>
                            <option value="2">Account Manager</option>
                            <option value="3">Chef</option>
                        </select>
                        <label class="fs-6" for="floatingInput">Role</label>
                    </div>

                </div>
            </div>

            <div class="row mx-0">
                <div class="col-lg-6 col-md-6 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" id="exampleInput"
                            aria-describedby="emailHelp" asp-for="Email" value="@Model.Email" placeholder="Email">
                        <label for="floatingInput">Email</label>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 mt-3">
                    <div class="form-floating">
                        <input type="password" class="form-control add_user_input" value="@Model.Password" id="floatingInput" asp-for="Password"
                            placeholder="abc@123">
                        <label for="floatingInput">Password</label>
                    </div>
                </div>
            </div>


            <div class="row upload_div mx-0 mt-3">
                <div class="col d-flex align-items-center browse_div justify-content-center w-100 border">
                    <div class="w-100">
                        <input id="inputFile" class="d-none" type="file">
                        <button class="w-100 h-100 d-flex justify-content-center al upload_btn bg-white"
                            onclick="openinputFile()">Browse file</button>
                    </div>
                </div>
            </div>

            <div class="row mx-0">
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                    <select class="form-select dropdown" asp-for="Country" id="Country">
                            <option>Select Country</option>
                        </select>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                    <select class="form-select" asp-for="State" id="State">
                        <option>Select State</option>
                    </select>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
<select class="form-select" asp-for="City" id="City">
                            <option>Select City</option>
                        </select>
                </div>
            </div>

            <div class="row mx-0">
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" id="floatingInput" asp-for="Zipcode" value="@Model.Zipcode"
                            placeholder="name@example.com">
                        <label for="floatingInput">Zipcode</label>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" id="floatingInput" asp-for="Address" value="@Model.Address"
                            placeholder="name@example.com">
                        <label for="floatingInput">Address</label>
                    </div>
                </div>
                <div class="col-lg-4 col-md-4 col-sm-12 mt-3">
                    <div class="form-floating">
                        <input type="text" class="form-control add_user_input" id="floatingInput" asp-for="Phone" value="@Model.Phone"
                            placeholder="name@example.com">
                        <label for="floatingInput">Phone</label>
                    </div>
                </div>
            </div>

            <div class="create_cancel_btn my-3">
                <button type="submit" class="btn btn-primary">Update User</button>
                <a href="" class="btn border-primary">Cancel</a>
            </div>

        </form>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/script.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

    <script>
        $(document).ready(function () {

            // Fetch and populate countries on page load
            $.getJSON('/GetData/GetCountries', function (data) {
                 $("#Country").html('<option selected>@(Model.Country)</option>');
                $("#State").html('<option selected>@(Model.State)</option>');
                $("#City").html('<option selected>@(Model.City)</option>');
                $.each(data, function (index, country) {
                    $("#Country").append(`<option value="${country.countryId}">${country.countryName}</option>`);
                });
            });

            // Fetch states when a country is selected
            $("#Country").change(function () {
                var countryId = $(this).val();
                $("#State").html('<option value="">Select State</option>').prop("disabled", true);
                $("#City").html('<option value="">Select City</option>').prop("disabled", true);

                if (countryId) {
                    $.getJSON(`/GetData/GetStates?countryId=${countryId}`, function (data) {
                        $("#State").prop("disabled", false);
                        $.each(data, function (index, state) {
                            $("#State").append(`<option value="${state.stateId}">${state.stateName}</option>`);
                        });
                    });
                }
            });

            // Fetch cities when a state is selected
            $("#State").change(function () {
                var stateId = $(this).val();
                $("#City").html('<option value="">Select City</option>').prop("disabled", true);

                if (stateId) {
                    $.getJSON(`/GetData/GetCities?stateId=${stateId}`, function (data) {
                        $("#City").prop("disabled", false);
                        $.each(data, function (index, city) {
                            $("#City").append(`<option value="${city.cityId}">${city.cityName}</option>`);
                        });
                    });
                }
            });
        });
    </script>

</body>
</html>