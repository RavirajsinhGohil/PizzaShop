@model test.ViewModel.UserPaginationViewModel;

@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Users</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    @* <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" /> *@
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/test.styles.css" asp-append-version="true" />
</head>

<body>
    <div class="main">
        <div class="offcanvas offcanvas-start d-lg-block show" tabindex="-1" id="sidebar" data-bs-scroll="true"
            data-bs-backdrop="false" aria-controls="offcanvasScrolling">

            <div class="offcanvas-body">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                    <div class="title fs-5 fw-bold">PIZZASHOP</div>
                    <button type="button" class="btn-close d-md-none" data-bs-dismiss="offcanvas"
                        aria-label="Close"></button>
                </div>
                <div class="d-flex flex-column mt-3 ps-3">
                    <a href="" class="dashboard_btn sidebar_btn ">
                        @* <img class="me-2" src="~/images/Download/border-all.svg" alt="Dashboard image not found"> *@
                        <img src="" alt="">
                        <div>Dashboard</div>
                    </a>
                    <a asp-controller="Home" asp-action="UserList" class="users_btn  sidebar_btn">
                        @* <img src="~/images/Download/people.svg" alt=""> *@
                        <img src="" alt="">
                        <div>Users</div>
                    </a>
                    <a asp-controller="Home" asp-action="Role" class="role_permission_btn  sidebar_btn">
                        @* <img src="~/images/Download/person-fill-gear.svg" alt=""> *@
                        <img src="" alt="">
                        <div>Role and Permission</div>
                    </a>
                    <a href="menu.html" class="menu_btn sidebar_btn">
                        @* <img src="~/images/Download/border-all.svg" alt=""> *@
                        <img src="" alt="">
                        <div>Menu</div>
                    </a>
                    <a href="" class="table_section_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Table and Section</div>
                    </a>
                    <a href="" class="taxes_fees_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Taxes And Fees</div>
                    </a>
                    <a href="" class="orders_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Orders</div>
                    </a>
                    <a href="" class="customers_btn sidebar_btn">
                        <img src="" alt="">
                        <div>Customers</div>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div id="user_body">
        <div class="status d-flex align-items-center justify-content-between h-10">
            <a class="btn btn-primary bg-white d-lg-block" data-bs-toggle="offcanvas" href="#sidebar" role="button"
                aria-controls="sidebar">
                <div class="d-flex align-items-center justify-content-center">
                    <img class="img-fluid pizza_shop_logo" src="~/images/logos/pizzashop_logo.png"
                        alt="Pizza shop logo not found">
                    <div class="title fs-5 fw-bold">PIZZASHOP</div>
                </div>
            </a>
            <div>
                <img class=" dropdown-toggle me-2" data-bs-toggle="dropdown" aria-expanded="false" width="35"
                    src="~/images/Default_pfp.svg.png" alt="">
                <ul class="dropdown-menu dropdown-menu-end ">
                    <li><a class="dropdown-item d-flex align-items-center" href="#">
                            <img class="me-2" width="25" src="~/images/Default_pfp.svg.png" alt="">
                            @Model.Username</a>
                        </a></li>
                    <li>
                        <hr class="dropdown-divider">
                    </li>
                    <li>
                        <a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="Profile">
                            <img class="me-2" width="25" src="~/images/Default_pfp.svg.png" alt="">
                            My profile
                        </a>
                    </li>
                    <li><a class="dropdown-item d-flex align-items-center" asp-controller="Home"
                            asp-action="ProfileChangePassword">
                            Change Password
                        </a></li>
                    <li><a class="dropdown-item d-flex align-items-center" asp-controller="Home" asp-action="Logout"
                            data-bs-toggle="modal" data-bs-target="#exampleModal">
                            <div class="d-flex">
                                Logout
                            </div>
                        </a></li>
                </ul>
            </div>
        </div>

        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <form>
                    <div class="modal-content">
                        <div class="modal-body">
                            <div class="d-flex justify-content-center"><img class="alert_img w-50"
                                    src="~/images/toppng.com-warning-icon-2400x2400.png" alt=""></div>
                            <div class="d-flex justify-content-center">Are you sure you want to logout?
                            </div>
                        </div>
                        <div class="modal-footer d-flex justify-content-center">
                            <div class=" mt-3">
                                <button type="submit" asp-controller="Home" asp-action="Logout"
                                    class="btn btn-primary">Yes</button>
                                <button type="submit" class="btn border-primary ms-1">No</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>

        <div class="users_list">
            <div class="users_list_heading p-3 d-flex justify-content-between">
                <div class="fw-bold fs-2 users_heading">Users</div>
                <div class="d-flex">
                    <form method="get" action="@Url.Action("UserList")" class="d-flex search_bar">
                        <input type="text" name="searchTerm" class="form-control search_space" placeholder="Search"
                            value="@Context.Request.Query["searchTerm"]">
                        <button type="submit" class="search_logo border-0 bg-transparent">
                            <img src="~/images/icons/search.svg" class="user_search_img" alt="">
                        </button>
                    </form>
                    <a asp-controller="Home" asp-action="AddUser" class="btn btn-primary ms-3">+Add user</a>
                </div>
            </div>

            <div class="users_list_body p-4 m-3 table-responsive">
                <table class="table fs-6">
                    <thead>
                        <tr>
                            <th>
                                <a href="@Url.Action("UserList", new {
                                searchTerm = Context.Request.Query["searchTerm"], 
                                                                page = Model.CurrentPage, 
                                                                pageSize = Model.PageSize, 
                                                                sortBy = "Name", 
                                                                sortOrder = Model.SortBy == "Name" && Model.SortOrder == "asc" ? "desc" : "asc"
                                                                })" class="sorting_link">
                                    Name
                                    <span class="sorting_icons">
                                        <span
                                            class="asc @(Model.SortBy == "Name" && Model.SortOrder == "asc" ? "active" : "")">↑</span>
                                        <span
                                            class="desc @(Model.SortBy == "Name" && Model.SortOrder == "desc" ? "active" : "")">↓</span>
                                    </span>
                                </a>
                            </th>
                            <th class="user_list_font_color">Email</th>
                            <th class="user_list_font_color">Phone</th>
                            <th class="user_list_font_color">
                                <a href="@Url.Action("UserList", new { searchTerm = Context.Request.Query["searchTerm"], page = Model.CurrentPage, pageSize = Model.PageSize, sortBy = "Role", 
                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                                sortOrder = Model.SortBy == "Role" && Model.SortOrder == "asc" ? "desc" : "asc" })"
                                    class="sort-link">
                                    Role
                                    <span class="sort-icons">
                                        <span
                                            class="asc @(Model.SortBy == "Role" && Model.SortOrder == "asc" ? "active" : "")">↑</span>
                                        <span
                                            class="desc @(Model.SortBy == "Role" && Model.SortOrder == "desc" ? "active" : "")">↓</span>
                                    </span>
                                </a>
                            </th>
                            <th class="user_list_font_color">Status</th>
                            <th class="user_list_font_color">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in Model.Users)
                        {
                            <tr class="userlist-row">
                                <td>@user.Firstname @user.Lastname</td>
                                <td>@user.Email</td>
                                <td>@user.Phone</td>
                                <td>@user.Role?.Rolename</td>
                                <td>@user.Status</td>
                                <td>
                                    <div class="d-flex">
                                        <a class="d-flex align-items-center" asp-controller="Home" asp-action="EditUser"
                                            asp-route-Userid="@user.Userid">
                                            <img src="~/images/Download/pencil.svg" alt="">
                                        </a>
                                        <div>
                                            <a class="btn btn-primary bg-white delete_btn" data-bs-toggle="modal" data-bs-target="#deleteUser"
                                                asp-controller="Home"
                                                asp-action="DeleteUser" asp-route-Userid="@user.Userid">
                                                <img src="~/images/Download/trash.svg" alt="">
                                            </a>

                                            <div class="modal fade" id="deleteUser" tabindex="-1"
                                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title" id="exampleModalLabel">Delete
                                                                Confirmation</h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                aria-label="Close"></button>
                                                        </div>
                                                        <div
                                                            class="modal-body d-flex flex-column align-items-center justify-content-center">
                                                            <img class="w-25"
                                                                src="~/images/toppng.com-warning-icon-2400x2400.png" alt="">
                                                            <div>Are you sure you want to delete this user?</div>
                                                        </div>
                                                        <div class="modal-footer d-flex justify-content-center">
                                                            <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Yes</button>
                                                            <button type="button" class="btn btn-primary">No</button>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <nav aria-label="Page navigation example">
                    <ul class="pagination justify-content-end">
                        <li class="d-flex align-items-center pe-3">Items per page</li>
                        <li class="d-flex align-items-center pe-3" style="border-radius: 5px; height: 40px;">
                            <select id="itemsPerPage" onchange="changePageSize(this.value)">
                                <option value="1" selected="@(Model.PageSize == 1)">1</option>
                                <option value="2" selected="@(Model.PageSize == 2)">2</option>
                                <option value="3" selected="@(Model.PageSize == 3)">3</option>
                                <option value="4" selected="@(Model.PageSize == 4)">4</option>
                                <option value="5" selected="@(Model.PageSize == 5)">5</option>
                            </select>
                        </li>
                        <li class="d-flex align-items-center pe-3">Showing @Model.StartIndex-@Model.EndIndex of
                            @Model.TotalItems</li>

                        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                            <a class="page-link"
                                href="@Url.Action("UserList", new { page = Model.CurrentPage - 1, pageSize = Model.PageSize })"
                                aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>

                        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                            <a class="page-link"
                                href="@Url.Action("UserList", new { page = Model.CurrentPage + 1, pageSize = Model.PageSize })"
                                aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="script.js"></script>
    <script>
        function changePageSize(pageSize) {
            window.location.href = '@Url.Action("UserList")' + '?page=1&pageSize=' + pageSize;
        }
    </script>
</body>

</html>